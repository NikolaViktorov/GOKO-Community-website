@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@if (this.User.Identity.IsAuthenticated)
{
    <main class="mt-3">
        <h1 class="text-center suls-text-color">@this.User.Identity.Name, you are already logged in!</h1>
        <div class="mx-auto half-width container-fluid ml-5">
            <h2>-> <a href="/">Back to Home page</a></h2>
        </div>
    </main>
}
else
{
    <main class="mt-3">
        <h1 class="text-center suls-text-color">Register</h1>
        <div class="mx-auto half-width container-fluid ml-5">
            <form class="mx-auto half-width col-5" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="top-border-line primary-separator"></div>

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="top-border-line primary-separator"></div>

                <div class="button-holder d-flex justify-content-center">
                    <button type="submit" class="btn suls-bg-color">Register</button>
                </div>
            </form>
        </div>
    </main>
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
