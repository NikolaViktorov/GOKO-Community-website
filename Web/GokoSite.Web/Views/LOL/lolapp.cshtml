@using GokoSite.Web.ViewModels.Games;

@model GetGamesInputModel

<main class="mt-3">
    <h1 class="text-center suls-text-color">GOKO.GG</h1>
    <div class="mx-auto half-width container-fluid ml-5">
        <form class="mx-auto half-width col-5" method="get" action="/LOL/GetGames">
            <div class="top-border-line primary-separator"></div>

            <div class="form-group">
                <label asp-for="Username" class="suls-text-color"></label>
                <input asp-for="Username" class="form-control" placeholder="Username...">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Count" class="suls-text-color">Number Of Games</label>
                <input asp-for="Count" type="number" class="form-control" placeholder="Count...">
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="suls-text-color">Region</label>
                <select asp-for="RegionId" class="form-control">
                    @foreach (var region in ViewBag?.Regions)
                    {
                        <option value="@region.Id">
                            @region.Name
                        </option>
                    }
                </select>
                <span asp-validation-for="RegionId" class="text-danger"></span>
            </div>

            @foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <p class="error-message-lol">@error.ErrorMessage</p>
                }
            }

            <div class="top-border-line primary-separator"></div>
            <div class="button-holder d-flex justify-content-center">
                <button type="submit" class="btn suls-bg-color">Search</button>
            </div>
        </form>
    </div>
</main>
