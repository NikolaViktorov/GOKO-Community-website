@using GokoSite.Web.ViewModels.Games;

@model HomePageGameViewModel

<link href="~/css/Test/magnific-popup.css" rel="stylesheet" rel="stylesheet" asp-append-version="true">
<link href="~/css/Test/styles.css" rel="stylesheet" rel="stylesheet" asp-append-version="true">


<main class="mt-3">
    <h1 class="text-center suls-text-color">GOKO.GG</h1>

    <table>
        <thead>
            <tr>
                @if (Model.BlueTeam.State == "Fail")
                {
                    <th class="Fail">Defeat</th>
                }
                else
                {
                    <th class="Win">Victory</th>
                }
                <th class="blueTeam">
                    KDA
                </th>
                <th class="blueTeam">
                    Damage
                </th>
                <th class="blueTeam">
                    CS
                </th>
                @*
                    <th class="blueTeam">
                        Items
                    </th>
                *@
            </tr>
        </thead>
        <tbody class="Contents">
            @for (int i = 0; i < 5; i++)
            {
                <tr>
                    <td class="blueTeam">
                        <div class="ChampionImage Cell">
                            <div>
                                <div class="Image">
                                    <img src="@Model.BlueTeam.Players[i].Champion.ChampionIconUrl" class="ChampionImage">
                                </div>
                                <div class="Level">@Model.BlueTeam.Players[i].Level</div>
                            </div>
                        </div>
                        <div class="SummonerSpell">
                            <div class="Spell">
                                <img class="Image" src="@Model.BlueTeam.Players[i].FirstSumSpellUrl" />
                            </div>
                            <div class="Spell">
                                <img class="Image" src="@Model.BlueTeam.Players[i].SecondSumSpellUrl" />
                            </div>
                        </div>
                        <div class="Username">@Model.BlueTeam.Players[i].Username</div>
                    </td>
                    <td class="blueTeam">
                        @Model.BlueTeam.Players[i].KDA
                    </td>
                    <td class="blueTeam">
                        @String.Format("{0:n0}", Model.BlueTeam.Players[i].Damage)
                        <progress class="progress-bar-striped" value="@(Model.BlueTeam.Players[i].Damage)" max="@Model.MaxDmg"></progress>
                    </td>
                    <td class="blueTeam">
                        @Model.BlueTeam.Players[i].CS
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="Summary">
        <div class="Team">
            <div class="ObjectScore">
                <img class="" src="//opgg-static.akamaized.net/images/site/summoner/icon-baron-b.png" />
                @Model.BlueTeam.BaronsSlain
            </div>
            <div class="ObjectScore">
                <img class="" src="//opgg-static.akamaized.net/images/site/summoner/icon-dragon-b.png" />
                @Model.BlueTeam.DragonsSlain
            </div>
            <div class="ObjectScore">
                <img class="" src="//opgg-static.akamaized.net/images/site/summoner/icon-tower-b.png" />
                @Model.BlueTeam.TurretsDestroyed
            </div>
        </div>
        <div class="summary-graph">
            <div class="total--container">
                <div class="textL graph--title">Total Kills</div>
                <div class="textL graph--data graph--data__left">@Model.BlueTeam.TotalKills</div>
                <div class="graph--container">
                    <div class="graph win--team" style="flex:@Model.BlueTeam.TotalKills"></div>
                    <div class="graph lose--team" style="flex:@Model.RedTeam.TotalKills;"></div>
                </div>
                <div class="textL graph--data graph--data__right">@Model.RedTeam.TotalKills</div>
            </div>
            <div class="total--container">
                <div class="textL graph--title">Total Gold</div>
                <div class="textL graph--data graph--data__left">@Model.BlueTeam.TotalGold</div>
                <div class="graph--container">
                    <div class="graph win--team" style="flex:@Model.BlueTeam.TotalGold"></div>
                    <div class="graph lose--team" style="flex:@Model.RedTeam.TotalGold"></div>
                </div>
                <div class="textL graph--data graph--data__right">@Model.RedTeam.TotalGold</div>
            </div>
        </div>
        <div class="Team">
            <div class="ObjectScore">
                <img class="" src="//opgg-static.akamaized.net/images/site/summoner/icon-baron-r.png" />
                @Model.RedTeam.BaronsSlain
            </div>
            <div class="ObjectScore">
                <img class="" src="//opgg-static.akamaized.net/images/site/summoner/icon-dragon-r.png" />
                @Model.RedTeam.DragonsSlain
            </div>
            <div class="ObjectScore">
                <img class="" src="//opgg-static.akamaized.net/images/site/summoner/icon-tower-r.png" />
                @Model.RedTeam.TurretsDestroyed
            </div>
        </div>
    </div>
    <table>
        <thead>
            <tr>
                @if (Model.RedTeam.State == "Fail")
                {
                    <th class="Fail">Defeat</th>
                }
                else
                {
                    <th class="Win">Victory</th>
                }
                <th class="redTeam">
                    KDA
                </th>
                <th class="redTeam">
                    Damage
                </th>
                <th class="redTeam">
                    CS
                </th>
                @*
                    <th class="redTeam">
                        Items
                    </th>
                *@
            </tr>
        </thead>
        <tbody class="Contents">
            @for (int i = 0; i < 5; i++)
            {
                <tr>
                    <td class="redTeam">
                        <div class="ChampionImage Cell">
                            <div>
                                <div class="Image __sprite __spc32 __spc32-46 tip">
                                    <img src="@Model.RedTeam.Players[i].Champion.ChampionIconUrl" class="ChampionImage">
                                </div>
                                <div class="Level">@Model.RedTeam.Players[i].Level</div>
                            </div>
                        </div>
                        <div class="SummonerSpell">
                            <div class="Spell">
                                <img class="Image" src="@Model.RedTeam.Players[i].FirstSumSpellUrl" />
                            </div>
                            <div class="Spell">
                                <img class="Image" src="@Model.RedTeam.Players[i].SecondSumSpellUrl" />
                            </div>
                        </div>
                        <div class="Username">@Model.RedTeam.Players[i].Username</div>
                    </td>
                    <td class="redTeam">
                        @Model.RedTeam.Players[i].KDA
                    </td>
                    <td class="redTeam">
                        @String.Format("{0:n0}", Model.RedTeam.Players[i].Damage)
                        <progress class="progress-bar-striped" value="@(Model.RedTeam.Players[i].Damage)" max="@Model.MaxDmg"></progress>
                    </td>
                    <td class="redTeam">
                        @Model.RedTeam.Players[i].CS
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <div class="container deatils-btn-container text-right">
        <a class="btn forum-go-back-btn text-uppercase popup-with-move-anim" href="#project-1"><span>Share game</span></a>
        <a href="/LOL/Collection" class="btn forum-go-back-btn text-uppercase">Back</a>
    </div>

    <div id="project-1" style="width: 30%;" class="lightbox-basic zoom-anim-dialog mfp-hide">
        <div class="row">
            <button title="Close (Esc)" type="button" class="mfp-close x-button">×</button>
            <div" class="col-lg-9">
                <h3>Share your game with your friends</h3>
                <hr class="line-heading">
                <p>If you want your friends to see your game you can share it by clicking this button: <button class="btn btn-info text-uppercase" onclick="CopyLink()">Click me</button> </p>
                <p>and then sending them the link.</p>
                <a class="btn-outline-reg mfp-close as-button" href="#projects">BACK</a>
        </div>
    </div>

</main>

<script src="/js/Test/jquery.min.js"></script>
<script src="/js/Test/bootstrap.min.js"></script>
<script src="/js/Test/swiper.min.js"></script>
<script src="/js/Test/jquery.magnific-popup.js"></script>
<script src="/js/Test/morphext.min.js"></script>
<script src="/js/Test/scripts.js"></script>
<script src="/js/CopyToClipboard.js"></script>
