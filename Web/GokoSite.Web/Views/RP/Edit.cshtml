@using GokoSite.Web.ViewModels.Forums;

@model EditForumViewModel

<div class="row">
    <div class="jumbotron col-md-12">
        <div class="heading-container bottom-buffer-md">
            <h1>Here you can edit your idea!</h1>
        </div>

        <form class="mx-auto half-width col-5" method="post" asp-controller="RP" asp-action="EditPost">
            <div class="top-border-line primary-separator"></div>

            <div class="form-group">
                <label asp-for="Topic" class="suls-text-color"></label>
                <input asp-for="Topic" class="form-control" placeholder="Topic..." value="@Model.Topic">
                <span asp-validation-for="Topic" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Text" class="suls-text-color">Your opinion</label>
                <textarea asp-for="Text" class="form-control" placeholder="Remember be nice!" cols="30" rows="5">@Model.Text</textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <label for="text" class="suls-text-color">This post has @Model.Likes likes!</label>

            <input asp-for="ForumId" class="hide" hidden="hidden" value="@Model.ForumId">

            <div class="top-border-line primary-separator"></div>

            <button type="submit" class="btn forum-add-bg-color">Edit</button>
        </form>
    </div>
</div>
